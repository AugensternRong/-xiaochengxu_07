/* pages/cart/purchase.wxss */
.content{
  font-size: 28rpx;
}
.site{
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: solid 2rpx #ccc;
}
.title{
  width: 100%;
  height: 100rpx;
  align-items: center;
  border-bottom: solid 1rpx #ccc;
  padding-left: 20rpx;
}
.main{
  margin-top: 50rpx;
}
.main image{
  width: 150rpx;
  height: 150rpx;
}
.main .main-box{
  width: 94%;
  display: flex;
  padding: 3%;
  justify-content: space-between;
  align-items: center;
}
.main .name{
  display: flex;
  justify-content: space-between;
  align-items: center; 
}
.name .price{
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background: white;
}

.button-red {
  background-color: red; /* 红色 */
}

button {
  position: fixed;
  right: 0;
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 40%;
  height: 120rpx;
  line-height: 120rpx;
}
.row .price{
  margin-left: 200rpx;
  color: red;
}
.input{
  width: 94%;
  height: 80rpx;
  margin: 10rpx auto;
  border-bottom: solid 2rpx #ccc;
  display: flex;
  justify-content: space-between;
  align-content: center;
}
.input > input{
   width: 72%; 
}