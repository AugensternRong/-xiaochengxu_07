@import '../template/header/header.wxss';
.swiper {
  height: 400rpx;
  width: 100%;
  position: relative;
}
.content{
  background: #f4f4f4;
  height: 3000rpx;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.lunbo{
  height: 550rpx;
  position: relative;
}
.nav-container {
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 165rpx;
  display: flex;
  justify-content: space-around;
  background: #fff;
  z-index: 12;
}
.nav-container > view{
  width: 25%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  
}
.nav-container text{
  font-size: 22rpx;
}
.container-main-pintuan{
  margin-top: 20rpx;
  width: 100%;
  height: auto;
  background: #fff;
}
.container-main-pintuan .title-pintuan{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}
.content-mian{
  width: 100%;
  height: 600rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.content-mian > view{
  width: 49.8%;
  height: 50%;
  border-top: solid 1rpx #efefef;
  font-size: 26rpx;
}
.content-mian > view > view{
  margin: 20rpx;
  height: 260rpx;
  position: relative;
}
.content-mian > view:nth-of-type(1){
  border-right: solid 1rpx #efefef;
}
.content-mian > view:nth-of-type(3){
  border-right: solid 1rpx #efefef;
}
.content-mian image{
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}
  .main-item{
  width: 100%; 
}  
/*循环出来的每一条数据的盒子  */
.main-item .box{
  width: 100%;
  height: 350rpx;
  border-top: solid 1rpx #f4f4f4;
}
.main-item .container-box{
  margin: 5%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.main-item image{
  width: 200rpx;
  height: 200rpx;
}
.main-item .container-box .price{
  display: flex;
  /* justify-content: center; */
  /* align-items: center; */
  width: 100%;
}
.main-item .container-box .price view{
  display: flex;
  justify-content: center;
  flex-direction: column;
  width: 33%;
}
.main-item .price-box{
  width: 450rpx;
  font-size: 28rpx;
}
.main-item text{
  margin: 15rpx 0; 
}
.swiper-item{
  height: 500rpx;
}
