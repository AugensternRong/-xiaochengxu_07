.wxParse-p{
width: 100%;
display: flex;
justify-content: center;
align-items: center;
flex-direction: column;
} 
.wxParse-img{
width: 96%;
}
.swiper {
  height: 500rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.title{
  width: 90%;
  padding: 5%;
  height: 170rpx;
  background: #f4f4f4;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}
.title .price{
  display: flex;
  justify-content: space-between;
  
} 
.templay{
  margin-top: 60rpx;
  width: 90%;
  margin: 60rpx auto;
}
.background{
  width: 100%;
  height: 40rpx;
  background: #ccc;
}
.select{
  height: 80rpx;
  background: #f4f4f4;
  font-size: 30rpx;
  width: 90%;
  padding: 5%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.select .select-box{
   display: flex;
}
.select .select-box text{
  margin-left: 10rpx;
}
.commod{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.commod > view{
  width: 50%;
  height: 100%;
  border-bottom: solid 5rpx #fff; 
  text-align: center;
  line-height: 100rpx;
}
.commod > .active{
  border-color: red;
  color: red;
}
.mengban{
  z-index: 20;
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  top: 0;
  background: rgba(100, 100, 100, .6)
}
.mengban .guige{
  width: 100%;
  height: 800rpx;
  background: #fff;
  position: absolute;
  bottom: 0;
  padding: 3%;
  display: flex;
  flex-direction: column;
}
.mengban image{
  width: 200rpx;
  height: 200rpx;
}
.mengban .price{
  width: 85%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.mengban .gui{
  display: flex;
}
.mengban .gui-chil{
  margin: 20rpx;
  border: solid 3rpx #ccc;
  
}
.mengban .num{
  width: 90%;
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.mengban .num > view:nth-of-type(2) view{
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: solid 3rpx red;
}
.mengban .num > view:nth-of-type(2){
  display: flex;
  justify-content: space-between;
  align-content: center;
}
.mengban .botton{
  width: 100%;
  position: absolute;
  bottom: 0;
  background: red;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  height: 100rpx;
  left: 0;
}
.mengban .cancel{
  position: absolute;
  top: 20rpx;
  right: 50rpx;
}
.mengban .active{
  border: solid 3rpx red;
  color: red;
}
.nav-botton{
  z-index: 10;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  background: #fff;
}
.nav-botton .mai , .nav-botton .pin{
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
}
.nav-botton .pin{
  width: 45%;
  height: 100%;
  background: red;
}
.nav-botton .mai{
  width: 30%;
  height: 100%;
}
.nav-botton > view{
  width: 12.4%;
  height: 100%;
  border-top: #ccc solid 3rpx;
  border-right: #ccc solid 3rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.image{
  position: relative;
}
.image  image{
  width: 80rpx;
  height: 80rpx;
}
.nav-botton .sun{
  min-width: 50rpx;
  min-height: 50rpx; 
  background: red;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
  font-size: 26rpx;
  border-radius: 50%;
  position: absolute;
  left:32%;
  top:20%;
}