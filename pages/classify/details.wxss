/* pages/classify/details.wxss */
view, text{
  margin: 0;
  padding: 0;
}
.title{
  text-align: center;
  font-size: 26rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background: #f4f4f4;
}
.item-box{
  margin-top: 20rpx; 
  width: 100%;
  display: flex;
  /* justify-content: space-around; */
  flex-wrap: wrap;
}
.item{
  margin-top: 20rpx;
  width: 45%;
  height: 460rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around; 
  margin-left: 3.3%;
}
.item image{
  width: 100%;
  height: 260rpx;
}
.item .price{
  width: 100%;
  display: flex;
  justify-content: space-between; 
  align-items: center;   
}
.item .itemname{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}